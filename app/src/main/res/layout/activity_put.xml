<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.pets.kurbatest.PutActivity">

    <EditText
        android:id="@+id/editTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Title"
        android:textStyle="bold|italic"
        android:inputType="textMultiLine"
        android:lines="5"
        android:minLines="3"/>

    <EditText
        android:id="@+id/editBody2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTitle2"
        android:layout_margin="@dimen/padding"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Write a message..."
        android:inputType="textMultiLine"
        android:lines="10"
        android:minLines="7" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_delete"
        android:layout_alignBottom="@+id/button_delete"
        android:layout_marginStart="68dp"
        android:layout_toEndOf="@+id/button_delete"
        android:text="Update" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="58dp"
        android:text="Delete"
        android:layout_below="@+id/editBody2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
